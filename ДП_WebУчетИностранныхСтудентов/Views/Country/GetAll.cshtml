@model GetCountryListViewModel

@{
    ViewBag.Title = "Список стран";
    Layout = "_Layout";
}

<div class="container">
    <div class="border border-3 border-success rounded m-1 bg-list-block">
        <div class="border border-3 border-success rounded m-2 bg-white">
            <form class="m-2" method="post">
                <div class="fs-5 align-content-center align-items-center">Поиск</div>
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="mx-auto">
                    <div class="col-12 d-flex justify-content-center justify-content-md-start align-items-center">
                        <input class="form-control m-1" asp-for="SearchCountry.SearchString" placeholder="Поиск" />
                    </div>
                    <div class="col-12 d-flex justify-content-center justify-content-md-start align-items-center">
                        <button asp-controller="Country" asp-action="GetAll" type="submit" class="btn btn-success m-1">Найти</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="d-flex justify-content-center justify-content-md-start">
        <h1>Список стран:</h1>
    </div>
    <div class="d-flex justify-content-center justify-content-md-start">
        <a asp-controller="Country" asp-action="AddCountry"><input type="submit" class="btn btn-success" value="Добавить" /></a>
    </div>
    @foreach (var country in Model.CountryViewModels)
    {
        <div class="border border-3 border-success rounded-pill m-1 bg-list-block">
            <div class="border border-3 border-success rounded-pill m-2 bg-white">
                <div class="row mx-auto">
                    <div class="col-12 col-md-6 d-flex justify-content-center justify-content-md-start align-items-center fs-5">
                        Название: @country.Name
                    </div>
                    <div class="col-12 col-md-3 d-flex justify-content-center justify-content-md-start align-items-center fs-5">
                        Студентов: @country.PersonsCount
                    </div>
                    <div class="col-12 col-md-3 d-flex justify-content-center justify-content-md-end align-items-center">
                        <div class="m-1">
                            <a asp-controller="Country" asp-action="EditCountry" asp-route-Id="@country.Id"><input type="button" class="btn btn-success" value="Редактировать"></a>
                        </div>
                        <div class="m-1">
                            <form asp-controller="Country" asp-action="DeleteCountry" method="post" asp-route-id="@country.Id">
                                <input class="btn btn-success" type="submit" value="Удалить" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>